{
  "type": "object",
  "properties": {
    "event_type": {
      "type": "string",
      "minLength": 1,
      "description": "Security event type filter"
    },
    "from": {
      "type": "string",
      "format": "date-time",
      "description": "Start timestamp for filtering (ISO 8601 format)"
    },
    "to": {
      "type": "string",
      "format": "date-time",
      "description": "End timestamp for filtering (ISO 8601 format)"
    },
    "client_id": {
      "type": "string",
      "minLength": 1,
      "description": "Client identifier filter"
    },
    "user_id": {
      "type": "string",
      "format": "uuid",
      "minLength": 1,
      "description": "User identifier filter"
    },
    "external_user_id": {
      "type": "string",
      "minLength": 1,
      "description": "External user identifier filter"
    },
    "user_name": {
      "type": "string",
      "minLength": 1,
      "description": "User name filter (partial match with preferred_username)"
    },
    "limit": {
      "type": "string",
      "pattern": "^([1-9][0-9]{0,2}|1000)$",
      "description": "Maximum number of events to return (1-1000)"
    },
    "offset": {
      "type": "string",
      "pattern": "^(0|[1-9][0-9]*)$",
      "description": "Number of events to skip for pagination (>=0)"
    }
  },
  "additionalProperties": true
}
