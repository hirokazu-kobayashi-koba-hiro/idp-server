{
  "id": "7e5c5afe-ae23-45ad-8668-6be49b98533d",
  "type": "authentication-assurance",
  "external_service": "mocky",
  "external_application_id_param": "application_id",
  "processes": {
    "apply": {
      "request_schema": {
        "type": "object",
        "required": [
          "last_name",
          "first_name",
          "last_name_kana",
          "first_name_kana",
          "birthdate",
          "nationality",
          "email_address",
          "mobile_phone_number",
          "address"
        ],
        "properties": {
          "last_name": {
            "type": "string",
            "maxLength": 255,
            "store": true
          },
          "first_name": {
            "type": "string",
            "maxLength": 255,
            "store": true
          },
          "last_name_kana": {
            "type": "string",
            "maxLength": 255,
            "store": true
          },
          "first_name_kana": {
            "type": "string",
            "maxLength": 255,
            "store": true
          },
          "birthdate": {
            "type": "string",
            "format": "date",
            "store": true
          },
          "nationality": {
            "type": "string",
            "maxLength": 255,
            "store": true
          },
          "email_address": {
            "type": "string",
            "maxLength": 255,
            "pattern": "^[\\w\\.-]+@[\\w\\.-]+\\.[a-zA-Z]{2,}$",
            "store": true
          },
          "mobile_phone_number": {
            "type": "string",
            "maxLength": 11,
            "pattern": "^[0-9]{10,11}$",
            "store": true
          },
          "address": {
            "type": "object",
            "store": true,
            "properties": {
              "street_address": {
                "type": "string",
                "maxLength": 255
              },
              "locality": {
                "type": "string",
                "maxLength": 255
              },
              "region": {
                "type": "string",
                "maxLength": 255
              },
              "postal_code": {
                "type": "string",
                "maxLength": 255
              },
              "country": {
                "type": "string",
                "maxLength": 255
              }
            }
          }
        }
      },
      "pre_hook": {
        "verifications": [

        ],
        "additional_parameters": [
          {
            "type": "http_request",
            "details": {
              "url": "http://localhost:4000/apply",
              "method": "POST",
              "static_headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer dummy-token"
              },
              "body_mapping_rules": [
                { "from": "$.request_body", "to": "*" }
              ],
              "response_validation_schema": {
                "type": "object",
                "required": [
                  "application_id"
                ],
                "properties": {
                  "application_id": {
                    "type": "string",
                    "store": true
                  }
                }
              }
            }
          }
        ]
      },
      "execution": {
        "type": "http_proxy",
        "url": "http://localhost:4000/apply",
        "method": "POST",
        "static_headers": {
          "Content-Type": "application/json",
          "Authorization": "Bearer dummy-token"
        },
        "static_body": {},
        "body_mapping_rules": [
          { "from": "$.request_body", "to": "*" },
          { "from": "$.user.sub", "to": "user_id" },
          { "from": "$.user.email", "to": "mail_address" },
          { "from": "$.user.custom_properties.token", "to": "token" }
        ]
      },
      "store": {
        "application_details_mapping_rules": [
          { "from": "$.request_body", "to": "*" },
          { "from": "$.response_body", "to": "*" }
        ]
      },
      "response": {
        "body_mapping_rules": [
          { "from": "$.response_body", "to": "*" }
        ]
      }
    },
    "request-authentication": {
      "request_schema": {
        "type": "object",
        "required": [
          "trust_framework",
          "evidence_document_type"
        ],
        "properties": {
          "trust_framework": {
            "type": "string",
            "maxLength": 100,
            "store": true
          },
          "evidence_document_type": {
            "type": "string",
            "maxLength": 50,
            "store": true
          }
        },
        "additionalProperties": false
      },
      "execution": {
        "url": "http://localhost:4000/request-authentication",
        "method": "POST",
        "static_headers": {
          "Content-Type": "application/json",
          "Authorization": "Bearer dummy-token"
        },
        "body_mapping_rules": [
          { "from": "$.request_body", "to": "*"}
        ],
        "static_body": {}
      },
      "store": {
        "application_details_mapping_rules": [
          { "from": "$.request_body", "to": "*" },
          { "from": "$.response_body", "to": "*" }
        ]
      },
      "response": {
        "body_mapping_rules": [
          { "from": "$.response_body", "to": "*" }
        ]
      }
    },
    "authentication-status": {
      "request_schema": {
        "type": "object",
        "required": [],
        "properties": {},
        "additionalProperties": false
      },
      "execution": {
        "url": "http://localhost:4000/authentication-status",
        "method": "POST",
        "static_headers": {
          "Content-Type": "application/json",
          "Authorization": "Bearer dummy-token"
        },
        "dynamic_body_keys": [],
        "static_body": {}
      },
      "store": {
        "application_details_mapping_rules": [
          { "from": "$.request_body", "to": "*" },
          { "from": "$.response_body", "to": "*" }
        ]
      },
      "response": {
        "body_mapping_rules": [
          { "from": "$.response_body", "to": "*" }
        ]
      }
    },
    "evaluate-result": {
      "description": "",
      "completion_condition": {
        "request_condition": {
          "all_of": [
            {
              "path": "$.approved",
              "type": "boolean",
              "operation": "eq",
              "value": true
            },
            {
              "path": "$.rejected",
              "type": "boolean",
              "operation": "eq",
              "value": false
            }
          ]
        },
        "process_condition": {
          "all_of": [
            {
              "process_name": "request-authentication",
              "success_count": 1
            },
            {
              "process_name": "authentication-status",
              "success_count": 1
            }
          ]
        }
      },
      "rejection_condition": {
        "description": "",
        "request_condition": {
          "all_of": [
            {
              "source": "request_body",
              "path": "$.approved",
              "operation": "eq",
              "value": false
            },
            {
              "source": "request_body",
              "path": "$.rejected",
              "operation": "eq",
              "value": true
            }
          ]
        }
      }
    }
  }
}