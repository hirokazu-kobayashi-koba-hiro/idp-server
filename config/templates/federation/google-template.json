{
  "id": "{federation-id}",
  "type": "oidc",
  "sso_provider": "google",
  "enabled": true,
  "payload": {
    "type": "standard",
    "provider": "standard",
    "issuer": "https://accounts.google.com",
    "issuer_name": "google",
    "authorization_endpoint": "https://accounts.google.com/o/oauth2/v2/auth",
    "token_endpoint": "https://oauth2.googleapis.com/token",
    "userinfo_endpoint": "https://openidconnect.googleapis.com/v1/userinfo",
    "jwks_uri": "https://www.googleapis.com/oauth2/v3/certs",
    "revocation_endpoint": "https://oauth2.googleapis.com/revoke",
    "response_types_supported": [
      "code",
      "id_token",
      "code id_token"
    ],
    "subject_types_supported": [
      "public"
    ],
    "id_token_signing_alg_values_supported": [
      "RS256"
    ],
    "scopes_supported": [
      "openid",
      "profile",
      "email"
    ],
    "token_endpoint_auth_methods_supported": [
      "client_secret_post",
      "client_secret_basic"
    ],
    "claims_supported": [
      "sub",
      "name",
      "email",
      "email_verified",
      "picture"
    ],
    "code_challenge_methods_supported": [
      "plain",
      "S256"
    ],
    "grant_types_supported": [
      "authorization_code",
      "refresh_token"
    ],
    "client_id": "{google-client-id}",
    "client_secret": "{google-client-secret}",
    "redirect_uri": "{your-domain}/{tenant-id}/v1/authorizations/federations/oidc/callback",
    "userinfo_mapping_rules": [
      {"from": "$.http_request.response_body.sub", "to": "external_user_id"},
      {"from": "$.http_request.response_body.email", "to": "email"},
      {"from": "$.http_request.response_body.name", "to": "name"},
      {"from": "$.http_request.response_body.picture", "to": "picture"}
    ]
  }
}
