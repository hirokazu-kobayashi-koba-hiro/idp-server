            },
            "password": {
              "type": "string",
              "description": "Password"
            },
            "provider_id": {
              "type": "string",
              "description": "Provider ID (default: idp-server)"
            }
          },
          "required": ["username", "password"]
        }
      },
      "pre_hook": {},
      "execution": {
        "function": "password_verification"
      },
      "post_hook": {},
      "response": {
        "body_mapping_rules": [
          {
            "from": "$.user_id",
            "to": "user_id"
          },
          {
            "from": "$.username",
            "to": "username"
          }
        ]
      }
    }
