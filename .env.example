# Base Configuration
IDP_SERVER_DOMAIN=http://localhost:8080/
ENV=local
BASE_URL=http://localhost:8080
DRY_RUN=false

# API Authentication (for setup.sh and admin operations)
# Generate using: uuidgen (for API_KEY), openssl rand -base64 32 (for API_SECRET and ENCRYPTION_KEY)
IDP_SERVER_API_KEY=
IDP_SERVER_API_SECRET=
ENCRYPTION_KEY=

# Secrets Configuration (Phase 2: Reference files instead of hardcoding)
# Run: ./config/scripts/migrate-secrets.sh to extract secrets from old templates
SECRETS_DIR=./config/secrets/${ENV}
JWKS_FILE=${SECRETS_DIR}/jwks.json
CLIENT_SECRETS_FILE=${SECRETS_DIR}/client-secrets.json
ENCRYPTION_KEYS_FILE=${SECRETS_DIR}/encryption-keys.json

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_TENANT_ID=

# Admin Client Configuration
# Generate ADMIN_CLIENT_ID using: uuidgen
# Generate ADMIN_CLIENT_SECRET using: openssl rand -base64 64
ADMIN_CLIENT_ID=
ADMIN_CLIENT_ID_ALIAS=
ADMIN_CLIENT_SECRET=

# Database Credentials (REQUIRED - No defaults provided for security)
# Generate strong passwords using: openssl rand -base64 32
POSTGRES_PASSWORD=
DB_OWNER_USER=
DB_OWNER_PASSWORD=
MYSQL_ROOT_PASSWORD=
MYSQL_PASSWORD=
CONTROL_PLANE_DB_WRITER_USER_NAME=idp_admin_user
CONTROL_PLANE_DB_WRITER_PASSWORD=
CONTROL_PLANE_DB_READER_USER_NAME=idp_admin_user
CONTROL_PLANE_DB_READER_PASSWORD=
DB_WRITER_USER_NAME=idp_app_user
DB_WRITER_PASSWORD=
DB_READER_USER_NAME=idp_app_user
DB_READER_PASSWORD=
IDP_DB_ADMIN_PASSWORD=
IDP_DB_APP_PASSWORD=
